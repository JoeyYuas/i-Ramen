<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            class="android.support.design.widget.AppBarLayout"
            android:id="@+id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="500dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:context=".MainActivity"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">


        <TextView
                android:text="@string/i_ramen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Title"
                android:fontFamily="@font/keania_one"
                android:textSize="30sp"
                android:textColor="#F2F2F2"
                android:background="#FF6C02"
                android:textAlignment="center"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/base_line"
                android:id="@+id/imageButton"
                android:background="@null"
                android:adjustViewBounds="true"
                android:elevation="10dp"
        />


    </FrameLayout>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/headerLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="195dp"
            android:id="@+id/scrollView2" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/record_eated" android:textSize="36sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:textSize="36sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="36sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:textSize="36sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="36sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="36sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:textSize="36sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="36sp"/>
        </LinearLayout>
    </ScrollView>

    <Button
            android:text="@string/button_eat"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button_Eat"
            android:background="@drawable/button_format"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="147dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="147dp"
            android:layout_marginTop="57dp"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            android:textSize="30sp" android:fontFamily="sans-serif" android:textColor="#333333"
            android:elevation="10dp"
            android:textAlignment="center" android:textAllCaps="false"/>

</android.support.constraint.ConstraintLayout>